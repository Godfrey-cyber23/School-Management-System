<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- Student Image (set fixed size for better fitting) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/studentImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile"
        android:layout_marginEnd="12dp"/>

    <!-- Student Name (no truncation, will wrap if necessary) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/studentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/godfrey_bwalya"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:paddingStart="12sp"
            android:paddingEnd="12sp" />

        <TextView
            android:id="@+id/studentPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_01"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:paddingStart="12sp"
            android:paddingEnd="12sp" />

        <TextView
            android:id="@+id/studentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/makeni_bonaventure_lusaka"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:paddingStart="12sp"
            android:paddingEnd="12sp" />

    </LinearLayout>

</LinearLayout>
